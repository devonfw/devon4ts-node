{
  "name": "mailer",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/mailer/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/js:swc",
      "outputs": ["{options.outputPath}"],
      "inputs": ["packages/mailer/src/lib/**/*.ts", "packages/mailer/src/index.ts", "package.json"],
      "options": {
        "outputPath": "dist/packages/mailer",
        "main": "packages/mailer/src/index.ts",
        "tsConfig": "packages/mailer/tsconfig.lib.json",
        "assets": ["packages/mailer/*.md"]
      }
    },
    "publish": {
      "command": "node tools/scripts/publish.mjs mailer {args.ver} {args.tag}",
      "dependsOn": ["build"]
    },
    "test": {
      "executor": "@nx/jest:jest",
      "options": {
        "jestConfig": "packages/mailer/jest.config.ts"
      }
    }
  },
  "tags": []
}
